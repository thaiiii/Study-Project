<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        /*Font tahoma va chu trang*/
        body {
            font-family: Tahoma, sans-serif;
            color: #fff;
        }

        /*Nen cam*/
        .header {
            background-color: #ff6a00;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
        }

        /*Menu mau do*/
        .navbar {
            background-color: #be0000;
        }

        .navbar a {
            color: #fff;
        }
    </style>

</head>
<body>
    <div class="header">
        BAI On TAP KIEM TRA THU SO 1
    </div>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
        <div class="container">
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div style="text-align:right;" class="collapse navbar-collapse d-sm-inline-flex justify-content-end">
                <ul class="navbar-nav">
                    <li>@Html.ActionLink("TONG KET", "TongKet", "QuanLyNhanVien", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-link">|</li>
                    <li>@Html.ActionLink("NHAN VIEN XS", "XuatSac", "QuanLyNhanVien", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-link">|</li>
                    <li>@Html.ActionLink("Nhap thong tin", "NhapThongTin", "QuanLyNhanVien", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>

    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
