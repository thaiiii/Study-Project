<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .banner{
            color: white;
            background-color: orangered;
            font-family: Tahoma;
            font-weight:bold;
            line-height:80px;
            font-size: 20px;
            justify-content:center;
            text-align:center;

        }

        .group-link {
            color: white;
            background-color: red;
            font-family: Tahoma;
            justify-content: right;
            display: flex;
            text-align: center;
        }

        .link{

            margin: 5px;
        }
    </style>
</head>
<body>
   <div class="banner">
       BAI KIEM TRA SO 2
   </div>
    <div class="group-link">
        <p class="link">@Html.ActionLink("Xem danh sach", "Xemdanhsach", "HocSinh", new { area = "" }, new { @class = "nav-link" })</p>
        <p class="link">|</p>
        <p class="link">@Html.ActionLink("Them du lieu", "Themdulieu", "HocSinh", new { area = "" }, new { @class = "nav-link" })</p>

    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

